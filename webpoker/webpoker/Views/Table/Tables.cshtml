@model IEnumerable<webpoker.Models.Table>

@{
    ViewData["Title"] = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Choose Table</h1>

<p>
    <a asp-action="CreateTable">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th onclick="">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "JoinTable", "Table")

                    </td>
                </tr>
        }
    </tbody>
</table>
