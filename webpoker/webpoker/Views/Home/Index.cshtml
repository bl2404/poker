@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model webpoker.Models.Table
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container-fluid">

        <div class="row" id="users"></div>

        <div class="row" id="actions"></div>
        <br />
        <div class="row">
            <div class="col text-center text-primary" id="pool">0</div>
        </div>
        <br />
        <div class="row">
            <div class="col"></div>
            <div class="col border" style="border-width: 2px; text-align: center; font-size: 20mm;">K♠</div>
            <div class="col border" style="text-align: center; color: red; font-size: 20mm;">Q♥</div>
            <div class="col border" style="text-align: center; color: red; font-size: 20mm;">A♦</div>
            <div class="col border" style="text-align: center; font-size: 20mm;">J♣</div>
            <div class="col border" style="text-align: center; font-size: 20mm;">3♣</div>
            <div class="col"></div>
        </div>
        <br />
        <div class="row">
            <div class="col"></div>
            <div class="col"></div>
            <div class="col border" style="text-align: center; font-size: 20mm;">10♠</div>
            <div class="col"></div>
            <div class="col border" style="text-align: center; color: red; font-size: 20mm;">7♥</div>
            <div class="col"></div>
            <div class="col"></div>
        </div>

        <div class="row"><p> </p></div>


        <div class="row">
            <div class="col" id="namefield">@HttpContextAccessor.HttpContext.Session.GetString("username")</div>
            <div class="col btn-danger text-center" id="passbutton">Pass</div>
            <input class="col" id="valueinput" name="Value" type="number" min="0" placeholder="przebij" />
            <div class="col btn-success text-center" id="gobutton"></div>
            <div class="col" id="wallet">@Model.Users.First(x => x.Name == HttpContextAccessor.HttpContext.Session.GetString("username")).Wallet</div>
        </div>

        <div class="row">
            <div class="col text-center text-success" id="info"></div>
        </div>

    </div>

<var id="adminname" hidden="hidden">@Model.Admin.Name</var>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
